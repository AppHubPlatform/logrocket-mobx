{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "outDir": "dist",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
